#include <iostream>

using namespace std;

int a, n, minim, maxim;

int main()
{
    minim = 999999;
    maxim = -999999;
    cin >> n;
    while(n >= 1){
        cin >> a;
        if(a < minim)
            minim = a;
        if(a > maxim)
            maxim = a;
            n--;}
        cout << minim + maxim;
    return 0;
}
